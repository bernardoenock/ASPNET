@using TesteASPNET.Domain.Entities
@model IEnumerable<Produto>

@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>Lista de Produtos</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Novo Produto</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>@Html.DisplayNameFor(model => model.Estoque)</th>
            <th>Data Atualização</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Preco.ToString("C")</td>
                <td>@item.Estoque</td>
                <td>@(item.DataAtualizacao.HasValue ? item.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger"
                       onclick="return confirm('⚠️ Confirma excluir este produto? A exclusão será lógica (não apagará o registro).');">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
